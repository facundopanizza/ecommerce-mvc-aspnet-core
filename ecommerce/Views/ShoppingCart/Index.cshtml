@model ShoppingCartViewModel

<h2>Your shopping cart</h2>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Selected amount</th>
      <th>Product</th>
      <th class="text-right">Price</th>
      <th class="text-right">Subtotal</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
    {
      <tr>
        <td class="text-center">@line.Amount</td>
        <td class="text-left">@line.Product.Name</td>
        <td class="text-right">$@line.Product.Price.ToString()</td>
        <td class="text-right">
          $@((line.Amount * line.Product.Price).ToString())
        </td>
      </tr>
    }
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3" class="text-right">Total:</td>
      <td class="text-right">
        $@Model.ShoppingCartTotal.ToString()
      </td>
    </tr>
  </tfoot>
</table>


<div class="text-center">
  <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Check out now!</a>
</div>
