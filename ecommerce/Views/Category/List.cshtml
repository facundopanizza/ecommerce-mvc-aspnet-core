@using X.PagedList.Mvc.Core.Common
@model CategoryListViewModel
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewBag.Title = "Categories";
    Layout = "_Layout";
}

<div class="row justify-content-between">
    <h1>Categories</h1>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="mt-2">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Create Category</a>
        </div>
    }
</div>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <td>#</td>
        <td>Name</td>
        @if (SignInManager.IsSignedIn(User))
        {
            <td></td>
            <td></td>
        }
    </tr>
    </thead>
    <tbody>
    @foreach (var category in @Model.Categories)
    {
        <tr>
            <td>@category.CategoryId</td>
            <td>@category.CategoryName</td>
            @if (SignInManager.IsSignedIn(User))
            {
                <td>
                    <a asp-action="Edit" asp-controller="Category" asp-route-categoryId="@category.CategoryId" class="btn btn-info">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Category" asp-route-categoryId="@category.CategoryId" class="btn btn-danger">Delete</a>
                </td>
            }
        </tr>
    }
    </tbody>
</table>

<div class="row justify-content-center">
    <div>
        @Html.PagedListPager(Model.Categories, page => Url.Action("List", "Category", new
        {
            page,
            order = ViewBag.order
        }), new PagedListRenderOptions
        {
            LiElementClasses = new string[] {"page-item"},
            PageClasses = new string[] {"page-link"}
        })
    </div>
</div>