@model Product;

<h2>@Model.Name</h2>

<div class="thumbnail">
  <img src="@Model.ImageUrl" alt="@Model.Name">
  <div class="caption-full">
    <h3 class="float-right">@Model.Price.ToString("c")</h3>
    <h3>
      <a href="#">@Model.Name</a>
    </h3>
    <h4>@Model.ShortDescription</h4>
    <p>@Model.LongDescription</p>
    <div class="row ml-2">
      <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductId"
        class="btn btn-primary mr-1">Edit</a>
      <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.ProductId" class="btn text-white"
        style="background-color: red;">Delete</a>
    </div>
  </div>
</div>